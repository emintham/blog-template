---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostForm from "../../components/admin/PostForm";
import { SITE_TITLE } from "../../siteConfig";
import { getUniqueTagNames } from "../../utils/tagUtils";
import "../../styles/admin.css";
import AdminFormFeedbackHandler from "../../components/admin/AdminFormFeedbackHandler.tsx"; // Import the new component

if (import.meta.env.PROD) {
  return new Response(null, { status: 404, statusText: "Not Found" });
}
export const prerender = false;

// Fetch all unique tag names for suggestions
const allPostTags = await getUniqueTagNames("blog", (data) => data.tags);
const allBookTags = await getUniqueTagNames(
  "blog",
  (data) => data.bookTags,
  (entry) => entry.data.postType === "bookNote"
);
const allQuoteTags = await getUniqueTagNames(
  "bookQuotes",
  (data) => data.quotes?.flatMap((q) => q.tags || []) || []
);

const pageTitle = `Create New Post - ${SITE_TITLE}`;
---

<BaseLayout title={pageTitle} isAdminPage={true}>
  <div class="page-detail-header">
    <h1>Create New Post</h1>
  </div>

  <form id="createPostForm" class="post-form" data-form-type="create">
    <PostForm
      client:load
      formId="createPostForm"
      allPostTags={allPostTags}
      allBookTags={allBookTags}
      allQuoteTags={allQuoteTags}
    />
    <button type="submit" id="createPostSubmitButton" class="button-primary"
      >Save New Post</button
    >
  </form>

  <div id="formFeedback" class="form-feedback-container">
    <p id="feedbackMessage"></p>
  </div>

  <AdminFormFeedbackHandler client:load formId="createPostForm" /> {/* Add the new component */}
  {/* <script src="/scripts/adminFormHandler.js" is:inline></script> REMOVE THIS LINE */}
</BaseLayout>
